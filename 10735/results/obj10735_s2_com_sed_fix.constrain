def Update_Constraints(pardictlc):
    pardictlc['bulge_Z_value'] = 0.02*10**(5.74+0.25*pardictlc['logM_bulge']+pardictlc['Sigma_MZR_bulge']-8.69)
    pardictlc['bulge_Z_value'] = jnp.maximum(pardictlc['bulge_Z_value'], 0.00001)
    pardictlc['bulge_Z_value'] = jnp.minimum(pardictlc['bulge_Z_value'], 0.04)
    pardictlc['com_1_Z_value'] = 0.02*10**(5.74+0.25*pardictlc['logM_com_1']+pardictlc['Sigma_MZR_com_1']-8.69)
    pardictlc['com_1_Z_value'] = jnp.maximum(pardictlc['com_1_Z_value'], 0.00001)
    pardictlc['com_1_Z_value'] = jnp.minimum(pardictlc['com_1_Z_value'], 0.04)
    pardictlc['disk_Z_value'] = 0.02*10**(5.74+0.25*pardictlc['logM_disk']+pardictlc['Sigma_MZR_disk']-8.69)
    pardictlc['disk_Z_value'] = jnp.maximum(pardictlc['disk_Z_value'], 0.00001)
    pardictlc['disk_Z_value'] = jnp.minimum(pardictlc['disk_Z_value'], 0.04)
